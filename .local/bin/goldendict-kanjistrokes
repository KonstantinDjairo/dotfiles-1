#!/bin/bash

readonly GDWORD=$*

# Don't output anything for empty or long queries.
if [[ -z $GDWORD ]] || [[ ${#GDWORD} -gt 5 ]]; then
	exit
fi

cat <<-EOF
	<div class="kanji_stroke_order">$GDWORD</div>
	<style>
	.kanji_stroke_order {
		font-size: 10rem;
		font-family: KanjiStrokeOrders;
	}
	</style>
EOF
