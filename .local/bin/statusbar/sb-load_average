#!/usr/bin/bash

notify_hogs() {
	notify-send "CPU hogs" "$(ps axch -o cmd:15,%cpu --sort=-%cpu | head -25)"
}

if [[ $BLOCK_BUTTON == 1 ]]; then
	notify_hogs
fi

readonly load=$(cut -f1 -d' ' /proc/loadavg)

echo "AVG $load"
echo "ï‚€ $load"
awk "-vl=$load" "-vn=$(nproc)" 'BEGIN{if(l>n){exit(33);}}'
